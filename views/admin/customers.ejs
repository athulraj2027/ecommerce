<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/admin/partial.css" />
    <link rel="stylesheet" href="/admin/product.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Dashboard</title>
</head>
<body>
    <%-include('../partials/admin/menu')%>
    

  <!-- Main Content -->
  <div class="main-content customers-page">
    <h1>Customers</h1>
    
    <!-- Add Customer Button -->
    <div class="add-customer">
      <button onclick="window.location.href='/admin/customers/add'">
        Add New Customer
      </button>
    </div>
    
    <!-- Customer Table -->
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Location</th>
          <th>Orders</th>
          <th>Total Spent</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <!-- Example row -->
        <tr>
          <td>John Doe</td>
          <td>New York, USA</td>
          <td>15</td>
          <td>$1,500</td>
          <td>
            <button>Edit</button>
            <button>Delete</button>
          </td>
        </tr>
        <tr>
          <td>Jane Smith</td>
          <td>Los Angeles, USA</td>
          <td>10</td>
          <td>$1,200</td>
          <td>
            <button>Edit</button>
            <button>Delete</button>
          </td>
        </tr>
      </tbody>
    </table>
    
    <!-- Pagination -->
    <div class="pagination">
      <button>&laquo; Prev</button>
      <button class="active">1</button>
      <button>2</button>
      <button>3</button>
      <button>Next &raquo;</button>
    </div>
  </div>
</div>
</body>
</html>
