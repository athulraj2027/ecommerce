<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/admin/partial.css" />
    <link rel="stylesheet" href="/admin/product.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Dashboard</title>
</head>
<body>
    <%-include('../partials/admin/menu')%>
    
<div class="main-content coupons-page">
    <h1>Coupons</h1>

    <!-- Add Coupon Button -->
    <div class="add-coupon">
      <button onclick="window.location.href='/admin/coupons/add'">
        Add New Coupon
      </button>
    </div>

    <!-- Coupon Table -->
    <table class="table">
      <thead>
        <tr>
          <th>Coupon Code</th>
          <th>Discount</th>
          <th>Expiry Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <!-- Example row -->
        <tr>
          <td>WELCOME10</td>
          <td>10%</td>
          <td>2024-12-31</td>
          <td>
            <button>Edit</button>
            <button>Delete</button>
          </td>
        </tr>
        <tr>
          <td>HOLIDAY20</td>
          <td>20%</td>
          <td>2024-11-30</td>
          <td>
            <button>Edit</button>
            <button>Delete</button>
          </td>
        </tr>
      </tbody>
    </table>

    <!-- Pagination -->
    <div class="pagination">
      <button>&laquo; Prev</button>
      <button class="active">1</button>
      <button>2</button>
      <button>3</button>
      <button>Next &raquo;</button>
    </div>
  </div>
</div>
</body>
</html>
