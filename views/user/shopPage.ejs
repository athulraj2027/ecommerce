<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/partials_css.css" />
    <link rel="stylesheet" href="/user/shopPage.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Shop Page</title>
  </head>
  <body>
    <%-include('../partials/user/header')%>
    <section class="shop">
      <div class="filters">
        <h3>Filters</h3>

        <!-- Price Filter -->
        <div class="filter-item">
            <h4>Price</h4>
            <input type="range" min="0" max="1000" value="500" id="priceRange" />
            <p>Price: $<span id="priceValue">500</span></p>
        </div>
        
        <div class="filter-item">
            <h4>Category</h4>
            <select id="categorySelect">
                <option value="all">All Categories</option>
                <option value="electronics">Electronics</option>
                <option value="fashion">Fashion</option>
                <option value="home">Home</option>
            </select>
        </div>
        
        <div class="filter-item">
            <h4>Brand</h4>
            <label><input type="checkbox" id="brand1" /> Brand A</label><br />
            <label><input type="checkbox" id="brand2" /> Brand B</label><br />
            <label><input type="checkbox" id="brand3" /> Brand C</label><br />
            <label><input type="checkbox" id="brand4" /> Brand D</label><br />
        </div>
        

        <!-- Category Filter -->
        <div class="filter-item">
          <h4>Category</h4>
          <select id="categorySelect">
            <option value="all">All Categories</option>
            <option value="electronics">Electronics</option>
            <option value="fashion">Fashion</option>
            <option value="home">Home</option>
          </select>
        </div>

        <!-- Additional Filters can be added here -->
      </div>

      <div class="product-container">
        <div class="product-card">
          <img src="https://via.placeholder.com/150" alt="Product 1" />
          <h3>Product 1</h3>
          <p class="price">$19.99</p>
          <button class="add-to-cart" onclick="addToCart('Product 1', 19.99)">
            Add to Cart
          </button>
        </div>
        <div class="product-card">
          <img src="https://via.placeholder.com/150" alt="Product 2" />
          <h3>Product 2</h3>
          <p class="price">$29.99</p>
          <button class="add-to-cart" onclick="addToCart('Product 2', 29.99)">
            Add to Cart
          </button>
        </div>
        <div class="product-card">
          <img src="https://via.placeholder.com/150" alt="Product 3" />
          <h3>Product 3</h3>
          <p class="price">$39.99</p>
          <button class="add-to-cart" onclick="addToCart('Product 3', 39.99)">
            Add to Cart
          </button>
        </div>
        <div class="product-card">
          <img src="https://via.placeholder.com/150" alt="Product 4" />
          <h3>Product 4</h3>
          <p class="price">$49.99</p>
          <button class="add-to-cart" onclick="addToCart('Product 4', 49.99)">
            Add to Cart
          </button>
        </div>
      </div>
    </section>
    <%-include('../partials/user/footer')%>
  </body>
</html>
